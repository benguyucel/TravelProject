@using TravelProject.Models.Siniflar
@model List<Blog>
<div class="con-bot">
    @{int a = 0;}
    @foreach (var item in Model)
    {
        a++;
        var ss = "left";
      
        if (a==3)
        {
            ss = "right";
        }

        <div class="@ss">
            <div class="bot-left">
                <img style="object-fit:cover" width="275" height="155" src="@item.FotoUrl" alt="" />
            </div>
            <div class="left-text">
                <h4>@item.Baslik</h4>
                <h5>@item.Tarih.ToString("dd.MM.yyyy")</h5>
                <p>@item.Aciklama.Substring(0,80)...</p>
                <p><a href="/Blog/BlogDetay/@item.ID"><span class="read">Devamı..>></span></a></p>
            </div>
        </div>

    }

    <div class="clear"></div>
</div>